<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Escala Turno 3x3</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      text-align: center;
      padding: 20px;
    }
    .container {
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }
    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }
    input[type="date"] {
      padding: 10px;
      font-size: 16px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      margin-left: 10px;
      cursor: pointer;
    }
    #resultado {
      margin-top: 20px;
      font-size: 18px;
    }
    a {
      color: #0066cc;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Descubra quem está no turno 3x3</h1>
    <input type="date" id="data" />
    <button onclick="verificar()">Verificar</button>
    <div id="resultado"></div>
  </div>

  <script>
    const turmas = ["Turma B", "Turma A"];

    const supervisores = {
      "Turma A": {
        dia: { nome: "Paulo Candido", telefone: "41992196052" },
        noite: { nome: "Gabriel Kuerten", telefone: "41992229788" }
      },
      "Turma B": {
        dia: { nome: "Ivan de Oliveira", telefone: "41996270451" },
        noite: { nome: "Renato Alves", telefone: "41999552521" }
      }
    };

    function verificar() {
      const dataInput = document.getElementById("data").value;
      if (!dataInput) {
        alert("Escolha uma data!");
        return;
      }

      const inicio = new Date("2025-01-01T00:00:00");
      const atual = new Date(dataInput + "T00:00:00");
      const diffDias = Math.floor((atual - inicio) / (1000 * 60 * 60 * 24));
      const bloco = Math.floor(diffDias / 3);
      const turma = turmas[bloco % 2];

      const agora = new Date();
      const hora = agora.getHours();
      const turno = (hora >= 6 && hora < 18) ? "dia" : "noite";
      const supervisor = supervisores[turma][turno];

      document.getElementById("resultado").innerHTML = `
        ✅ Agora são ${hora.toString().padStart(2, '0')}:00<br>
        Supervisor de plantão: 
        <strong>
          <a href="tel:${supervisor.telefone}">
            ${supervisor.nome}
          </a>
        </strong><br>
        (${turma}, turno ${turno.toUpperCase()})
      `;
    }
  </script>
</body>
</html>
      `;
    }
  </script>
</body>
</html>
